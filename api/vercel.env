# Biến môi trường cần thiết cho Vercel
# Đặt VERCEL=1 để API biết nó đang chạy trên Vercel
VERCEL=1

# Thông tin OAuth Hanet (bắt buộc để API hoạt động khi không có MongoDB)
HANET_CLIENT_ID=
HANET_CLIENT_SECRET=
HANET_REFRESH_TOKEN=

# URL cơ sở của API Hanet
HANET_API_BASE_URL=https://partner.hanet.ai
HANET_TOKEN_URL=https://oauth.hanet.com/token

# Thông tin MongoDB (nếu sử dụng)
MONGODB_URI=
MONGODB_DB_NAME=hanetTokens

# URL cho CORS (điều chỉnh theo môi trường)
CLIENT_URL=https://api-fe-hanetby-nghia.vercel.app

# Port (không cần thiết trên Vercel)
PORT=3333
